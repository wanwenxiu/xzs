<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_white">

    <TextView
        android:id="@+id/night_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:paddingTop="30px"
        android:text="收入"
        android:textColor="@color/text_black"
        android:textSize="50px" />

    <TextView
        android:id="@+id/night_danhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/night_name"
        android:layout_below="@+id/night_name"
        android:layout_marginTop="5px"
        android:text="订单号: 2000000140290490037"
        android:textColor="#C7C7C7"
        android:textSize="40px" />

    <TextView
        android:id="@+id/night_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/night_danhao"
        android:layout_below="@+id/night_danhao"
        android:layout_marginTop="5px"
        android:text="完成时间: 2016-10-17 13:00"
        android:textColor="#C7C7C7"
        android:textSize="40px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/night_time"
        android:layout_marginTop="20px"
        android:background="#D5D5D9" />


</com.zhy.autolayout.AutoRelativeLayout>