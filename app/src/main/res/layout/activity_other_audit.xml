<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/audit"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/audit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间" />

    <TextView
        android:id="@+id/audit_address"
        android:layout_width="wrap_content"
        android:layout_below="@+id/audit_time"
        android:layout_height="wrap_content"
        android:text="地址" />

    <TextView
        android:id="@+id/audit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audit_address"
        android:text="报修人姓名" />

    <TextView
        android:id="@+id/audit_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audit_name"
        android:text="电话" />

    <TextView
        android:id="@+id/audit_depict"
        android:layout_below="@+id/audit_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说明" />


    <TextView
        android:id="@+id/audit_photos"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:gravity="center"
        android:text="附图"
        android:layout_below="@+id/audit_depict"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/audit_image"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_above="@+id/audit_button"
        android:layout_toEndOf="@+id/audit_depict" />



    <Button
        android:id="@+id/audit_button"
        android:layout_below="@+id/audit_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验收完成" />
</com.zhy.autolayout.AutoRelativeLayout>