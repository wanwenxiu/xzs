<?xml version="1.0" encoding="utf-8"?>
<com.yxld.xzs.view.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30px"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pick_address"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50px"
            android:paddingTop="30px"
            android:text="和庄A1栋2716"
            android:textColor="@color/text_black"
            android:textSize="50px" />


        <TextView
            android:id="@+id/pick_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50px"
            android:layout_marginTop="30px"
            android:text="¥5.9"
            android:textColor="@color/text_red"
            android:textSize="50px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pick_address"
            android:layout_below="@+id/pick_address"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px">

            <TextView
                android:id="@+id/pick_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="35px" />


            <TextView
                android:id="@+id/pick_amount"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="35px" />

            <TextView
                android:id="@+id/pick_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="50px"
                android:textColor="@color/text_black"
                android:textSize="35px" />

        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:id="@+id/pick_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/details"
            android:layout_below="@+id/details"
            android:layout_marginBottom="20px"
            android:background="@drawable/shap_text"
            android:text="用户下单时间11:21"
            android:textColor="@color/text_orange"
            android:textSize="35px" />

        <Button
            android:id="@+id/pick_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pick_time"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/button_selector"
            android:text="确定取货"
            android:textColor="@color/drawer_white" />

    </com.zhy.autolayout.AutoRelativeLayout>
</com.yxld.xzs.view.AutoCardView>